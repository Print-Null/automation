{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "code": 1,
            "message": "success",
            "data": {
                "balance_amount": 0,
                "balance_amount_text": "0 half price + 0 THB"
            }
        }
    ],
    "required": [
        "code",
        "message",
        "data"
    ],
    "additionalProperties": true,
    "properties": {
        "code": {
            "$id": "#/properties/code",
            "type": "integer",
            "title": "The code schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                1
            ]
        },
        "message": {
            "$id": "#/properties/message",
            "type": "string",
            "title": "The message schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "success"
            ]
        },
        "data": {
            "$id": "#/properties/data",
            "type": "object",
            "title": "The data schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
                {
                    "balance_amount": 0,
                    "balance_amount_text": "0 half price + 0 THB"
                }
            ],
            "required": [
                "balance_amount",
                "balance_amount_text"
            ],
            "additionalProperties": true,
            "properties": {
                "balance_amount": {
                    "$id": "#/properties/data/properties/balance_amount",
                    "type": "integer",
                    "title": "The balance_amount schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": 0,
                    "examples": [
                        0
                    ]
                },
                "balance_amount_text": {
                    "$id": "#/properties/data/properties/balance_amount_text",
                    "type": "string",
                    "title": "The balance_amount_text schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                        "0 half price + 0 THB"
                    ]
                }
            }
        }
    }
}